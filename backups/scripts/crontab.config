PATH=/usr/local/sbin:/usr/local/bin:/usr/sbin:/usr/bin:/sbin:/bin

# Ежедневно в 2:00 - полный бэкап
0 2 * * * /backups/scripts/backup-master.sh >> /backups/logs/cron_daily.log 2>&1

# Каждые 6 часов - проверка реплики
0 */6 * * * /backups/scripts/backup-replica.sh >> /backups/logs/cron_replica.log 2>&1

# Каждую минуту - тест (для отладки)
* * * * * echo "Cron test: $(date)" >> /backups/logs/cron_test.log
